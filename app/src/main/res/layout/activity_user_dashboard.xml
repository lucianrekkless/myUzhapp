<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:transitionName="ud_layout_transition"
    tools:context=".User.UserDashboard">


    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigation_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@color/colorPrimary"
        android:theme="@style/navigationTheme"
        app:headerLayout="@layout/menu_header"
        app:itemIconTint="@color/colorPrimaryDark"
        app:itemTextColor="@color/colorPrimaryDark"
        app:menu="@menu/main_menu" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <RelativeLayout
            android:id="@+id/top_navi"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:background="@color/colorPrimaryDark"
            android:elevation="10dp"
            android:padding="13dp">

            <ImageView
                android:id="@+id/menu_icon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerVertical="true"
                android:src="@drawable/menu_icon" />

            <ImageView
                android:id="@+id/retailer_startup"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:onClick="callRetailerScreens"
                android:src="@drawable/app_image_main"
                android:transitionName="app_logo" />

            <TextView
                android:id="@+id/app_name"
                android:layout_width="110dp"
                android:layout_height="50dp"
                android:layout_toLeftOf="@id/retailer_startup"
                android:fontFamily="@font/cocogoose_bold_italic"
                android:gravity="center"
                android:shadowColor="@color/colorPrimaryDark"
                android:shadowDx="0.0"
                android:shadowDy="0.0"
                android:shadowRadius="10.0"
                android:text="@string/app_name"
                android:textColor="@color/colorPrimary"
                android:textSize="25sp"
                android:transitionName="app_name" />


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/cat_scroll">

            <RelativeLayout
                android:id="@+id/food_drink"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/card1"
                android:visibility="gone">

                <TextView
                    android:id="@+id/food_title"
                    android:layout_margin="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/cocogoose_black"
                    android:gravity="center_horizontal"
                    android:text="@string/food"
                    android:textColor="@color/Black"
                    android:textSize="20sp" />

                <androidx.recyclerview.widget.RecyclerView
                    android:layout_below="@id/food_title"
                    android:id="@+id/food_and_drink_recycler"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>





            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/residence"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/card2"
                android:visibility="gone">

                <TextView
                    android:id="@+id/resid_title"
                    android:layout_margin="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/cocogoose_black"
                    android:gravity="center_horizontal"
                    android:text="@string/residence"
                    android:textColor="@color/Black"
                    android:textSize="20sp" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/residence_recycler"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@id/resid_title"/>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/entertainment"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/card4"
                android:visibility="gone">

                <TextView
                    android:id="@+id/enter_title"
                    android:layout_margin="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/cocogoose_black"
                    android:gravity="center_horizontal"
                    android:text="@string/entertain"
                    android:textColor="@color/Black"
                    android:textSize="20sp" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/entertainment_recycler"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@id/enter_title"/>

            </RelativeLayout>

        </RelativeLayout>

        <HorizontalScrollView
            android:id="@+id/cat_scroll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/top_navi"
            android:layout_marginTop="10dp"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <RelativeLayout
                    android:id="@+id/card1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="callFoodAndDrink">

                    <RelativeLayout
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_margin="10dp"
                        android:background="@drawable/card_1"
                        android:elevation="8dp">

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_centerInParent="true"
                            android:src="@drawable/food_icon" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/card1x"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:visibility="invisible" />


                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/card2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/card1"
                    android:onClick="callResidence">

                    <RelativeLayout
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_margin="10dp"
                        android:background="@drawable/card_2"
                        android:elevation="8dp">

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_centerInParent="true"
                            android:src="@drawable/residence_icon" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/card2x"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:visibility="invisible" />


                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/card3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/card2"
                    android:onClick="callTransport">

                    <RelativeLayout
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_margin="10dp"
                        android:background="@drawable/card_3"
                        android:elevation="8dp">


                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_centerInParent="true"
                            android:src="@drawable/transport_icon" />


                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/card3x"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:visibility="invisible" />


                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/card4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/card3"
                    android:onClick="callEntertainment">

                    <RelativeLayout
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_margin="10dp"
                        android:background="@drawable/card_4"
                        android:elevation="8dp">

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_centerInParent="true"
                            android:src="@drawable/entertainment_icon" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/card4x"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:visibility="invisible" />


                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/card5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/card4">

                    <RelativeLayout
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_margin="10dp"
                        android:background="@drawable/card_5"
                        android:elevation="8dp">

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_centerInParent="true"
                            android:src="@drawable/shops_icon" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/card5x"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:visibility="invisible" />


                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/card6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/card5">

                    <RelativeLayout
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_margin="10dp"
                        android:background="@drawable/card_6"
                        android:elevation="8dp">

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_centerInParent="true"
                            android:src="@drawable/bank_icon" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/card6x"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:visibility="invisible" />


                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/card7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/card6">

                    <RelativeLayout
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_margin="10dp"
                        android:background="@drawable/card_7"
                        android:elevation="8dp">


                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_centerInParent="true"
                            android:src="@drawable/education_icon" />


                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/card7x"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:visibility="invisible" />


                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/card8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/card7">

                    <RelativeLayout
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_margin="10dp"
                        android:background="@drawable/card_8"
                        android:elevation="8dp">

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_centerInParent="true"
                            android:src="@drawable/other_icon" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/card8x"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:visibility="invisible" />


                </RelativeLayout>


            </LinearLayout>


        </HorizontalScrollView>

        <ScrollView
            android:id="@+id/main_scroll"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_below="@+id/container"
            android:visibility="visible">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <RelativeLayout
                    android:id="@+id/featured"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/featured_recycler"
                        android:layout_width="match_parent"
                        android:layout_height="300dp"
                        android:paddingEnd="50dp"
                        android:clipToPadding="false"
                        android:layout_below="@id/featured_background"
                        android:layout_marginTop="-10dp"
                        android:background="@drawable/round_corners"
                        android:backgroundTint="@color/colorPrimary"
                        android:paddingVertical="10dp" />

                    <RelativeLayout
                        android:id="@+id/featured_background"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:background="@drawable/round_corners"
                        android:backgroundTint="@color/colorPrimary">


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="10dp"
                            android:fontFamily="@font/cocogoose_bold_italic"
                            android:text="Featured"
                            android:textAllCaps="true"
                            android:textColor="@color/colorPrimaryDark"
                            android:textSize="25sp" />


                    </RelativeLayout>


                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical"
                    android:paddingBottom="10dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingHorizontal="20dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/cocogoose_black"
                            android:text="@string/most_viewed_locations"
                            android:textAllCaps="true"
                            android:textColor="@color/colorAccent"
                            android:textSize="20sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:text="@string/view_all" />


                    </RelativeLayout>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/most_liked_recycler"
                        android:layout_width="match_parent"
                        android:paddingEnd="50dp"
                        android:clipToPadding="false"
                        android:layout_height="180dp" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical"
                    android:paddingBottom="10dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingHorizontal="20dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/cocogoose_black"
                            android:text="@string/updated"
                            android:textAllCaps="true"
                            android:textColor="@color/colorAccent"
                            android:textSize="20sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:text="@string/view_all" />
                    </RelativeLayout>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/updated_recycler"
                        android:layout_width="match_parent"
                        android:paddingEnd="50dp"
                        android:clipToPadding="false"
                        android:layout_height="180dp" />


                </LinearLayout>

            </LinearLayout>

        </ScrollView>


    </RelativeLayout>


</androidx.drawerlayout.widget.DrawerLayout>