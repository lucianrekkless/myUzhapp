<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".User.UserDashboard">


    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigation_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@color/lightWhite"
        android:theme="@style/navigationTheme"
        app:headerLayout="@layout/menu_header"
        app:menu="@menu/main_menu" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/snow"
                android:layout_width="match_parent"
                android:layout_height="1000dp"
                android:layout_gravity="center"
                app:lottie_autoPlay="true"
                app:lottie_loop="true"
                app:lottie_rawRes="@raw/snow_santa" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#00000000"
            android:orientation="vertical">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:padding="13dp">

                <ImageView
                    android:id="@+id/menu_icon"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/menu_icon" />

                <ImageView
                    android:id="@+id/retailer_startup"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:onClick="callRetailerScreens"
                    android:src="@drawable/add_missing_place_icon" />

                <TextView
                    android:id="@+id/app_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginHorizontal="10dp"
                    android:fontFamily="@font/cocogoose_black"
                    android:shadowColor="@color/colorPrimary"
                    android:shadowDx="0.0"
                    android:shadowDy="0.0"
                    android:shadowRadius="10.0"
                    android:text="@string/app_name"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="28sp" />

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_toRightOf="@id/app_name"
                    android:src="@drawable/menu_app_icon" />

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_toLeftOf="@id/app_name"
                    android:src="@drawable/menu_app_icon" />


            </RelativeLayout>


            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center">


                        <RelativeLayout
                            android:id="@+id/more_lines"
                            android:layout_below="@id/line1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:visibility="gone"
                            android:gravity="bottom">

                            <ImageView
                                android:layout_centerHorizontal="true"
                                android:onClick="lessCategories"
                                android:layout_below="@id/card8"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/expand_less_icon"/>



                            <LinearLayout
                                android:id="@+id/card5"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <RelativeLayout
                                    android:layout_width="60dp"
                                    android:layout_height="60dp"
                                    android:layout_margin="10dp"
                                    android:background="@drawable/card_8"
                                    android:elevation="8dp">

                                    <ImageView
                                        android:layout_width="30dp"
                                        android:layout_height="30dp"
                                        android:layout_centerInParent="true"
                                        android:src="@drawable/bank_icon" />

                                </RelativeLayout>

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center_horizontal"
                                    android:text="@string/banks"
                                    android:textAlignment="center"
                                    android:textColor="@color/Black" />

                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/card6"
                                android:layout_toRightOf="@id/card5"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <RelativeLayout
                                    android:layout_width="60dp"
                                    android:layout_height="60dp"
                                    android:layout_margin="10dp"
                                    android:background="@drawable/card_5"
                                    android:elevation="8dp">

                                    <ImageView
                                        android:layout_width="30dp"
                                        android:layout_height="30dp"
                                        android:layout_centerInParent="true"
                                        android:src="@drawable/shops_icon" />

                                </RelativeLayout>

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center_horizontal"
                                    android:text="@string/shops"
                                    android:textAlignment="center"
                                    android:textColor="@color/Black" />

                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/card7"
                                android:layout_toRightOf="@id/card6"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <RelativeLayout
                                    android:layout_width="60dp"
                                    android:layout_height="60dp"
                                    android:layout_margin="10dp"
                                    android:background="@drawable/card_6"
                                    android:elevation="8dp">


                                    <ImageView
                                        android:layout_width="30dp"
                                        android:layout_height="30dp"
                                        android:layout_centerInParent="true"
                                        android:src="@drawable/education_icon" />


                                </RelativeLayout>

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center_horizontal"
                                    android:text="@string/education"
                                    android:textAlignment="center"
                                    android:textColor="@color/Black" />

                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/card8"
                                android:layout_toRightOf="@id/card7"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <RelativeLayout
                                    android:layout_width="60dp"
                                    android:layout_height="60dp"
                                    android:layout_margin="10dp"
                                    android:background="@drawable/card_4"
                                    android:elevation="8dp">

                                    <ImageView
                                        android:layout_width="30dp"
                                        android:layout_height="30dp"
                                        android:layout_centerInParent="true"
                                        android:src="@drawable/other_icon" />

                                </RelativeLayout>

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center_horizontal"
                                    android:text="@string/other"
                                    android:textAlignment="center"
                                    android:textColor="@color/Black" />

                            </LinearLayout>




                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/line1"
                            android:gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:id="@+id/expand_more_categories"
                                android:layout_below="@id/card2"
                                android:layout_centerHorizontal="true"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:visibility="visible"
                                android:onClick="moreCategories"
                                android:src="@drawable/expand_more_icon"/>

                            <LinearLayout
                                android:id="@+id/card1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <RelativeLayout
                                    android:layout_width="60dp"
                                    android:layout_height="60dp"
                                    android:layout_margin="10dp"
                                    android:background="@drawable/card_1"
                                    android:elevation="8dp">

                                    <ImageView
                                        android:layout_width="30dp"
                                        android:layout_height="30dp"
                                        android:layout_centerInParent="true"
                                        android:src="@drawable/food_icon" />

                                </RelativeLayout>

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center_horizontal"
                                    android:text="@string/food"
                                    android:textAlignment="center"
                                    android:textColor="@color/Black" />

                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/card2"
                                android:layout_toRightOf="@id/card1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <RelativeLayout
                                    android:layout_width="60dp"
                                    android:layout_height="60dp"
                                    android:layout_margin="10dp"
                                    android:background="@drawable/card_2"
                                    android:elevation="8dp">

                                    <ImageView
                                        android:layout_width="30dp"
                                        android:layout_height="30dp"
                                        android:layout_centerInParent="true"
                                        android:src="@drawable/residence_icon" />

                                </RelativeLayout>

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center_horizontal"
                                    android:text="@string/residence"
                                    android:textAlignment="center"
                                    android:textColor="@color/Black" />

                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/transport_category_btn"
                                android:layout_toRightOf="@id/card2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:onClick="callTransport"
                                android:orientation="vertical">

                                <RelativeLayout
                                    android:layout_width="60dp"
                                    android:layout_height="60dp"
                                    android:layout_margin="10dp"
                                    android:background="@drawable/card_3"
                                    android:elevation="8dp">


                                    <ImageView
                                        android:layout_width="30dp"
                                        android:layout_height="30dp"
                                        android:layout_centerInParent="true"
                                        android:src="@drawable/transport_icon" />


                                </RelativeLayout>

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center_horizontal"
                                    android:text="@string/transport"
                                    android:textAlignment="center"
                                    android:textColor="@color/Black" />

                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/card4"
                                android:layout_toRightOf="@id/transport_category_btn"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <RelativeLayout
                                    android:layout_width="60dp"
                                    android:layout_height="60dp"
                                    android:layout_margin="10dp"
                                    android:background="@drawable/card_7"
                                    android:elevation="8dp">

                                    <ImageView
                                        android:layout_width="30dp"
                                        android:layout_height="30dp"
                                        android:layout_centerInParent="true"
                                        android:src="@drawable/entertainment_icon" />

                                </RelativeLayout>

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center_horizontal"
                                    android:text="@string/entertain"
                                    android:textAlignment="center"
                                    android:textColor="@color/Black" />

                            </LinearLayout>


                        </RelativeLayout>

                    </RelativeLayout>




                    <RelativeLayout
                        android:id="@+id/featured"
                        android:layout_width="match_parent"
                        android:layout_height="340dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="20dp">

                        <LinearLayout
                            android:id="@+id/featured_background"
                            android:layout_width="170dp"
                            android:layout_height="390dp"
                            android:layout_marginLeft="8dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="15dp"
                            android:background="@drawable/featured_shape"
                            android:elevation="8dp"
                            android:orientation="vertical">


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="92dp"
                                android:layout_marginTop="50dp"
                                android:layout_marginRight="10dp"
                                android:fontFamily="@font/cocogoose_black"
                                android:gravity="right"
                                android:text="@string/featured_locations"
                                android:textAllCaps="true"
                                android:textColor="@color/colorAccent"
                                android:textSize="25sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="10dp"
                                android:gravity="right"
                                android:text="@string/featured_locations_description" />

                        </LinearLayout>

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/featured_recycler"
                            android:layout_width="match_parent"
                            android:layout_height="400dp"
                            android:layout_marginTop="5dp"
                            android:layout_toRightOf="@id/featured_background" />


                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="vertical"
                        android:paddingBottom="10dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingHorizontal="20dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/cocogoose_black"
                                android:text="@string/most_viewed_locations"
                                android:textAllCaps="true"
                                android:textColor="@color/colorAccent"
                                android:textSize="20sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:text="@string/view_all" />


                        </RelativeLayout>

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/most_viewed_recycler"
                            android:layout_width="match_parent"
                            android:layout_height="180dp" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="vertical"
                        android:paddingBottom="10dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingHorizontal="20dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/cocogoose_black"
                                android:text="@string/categories"
                                android:textAllCaps="true"
                                android:textColor="@color/colorAccent"
                                android:textSize="20sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:text="@string/view_all" />
                        </RelativeLayout>

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/categories_recycler"
                            android:layout_width="match_parent"
                            android:layout_height="180dp" />


                    </LinearLayout>

                </LinearLayout>

            </ScrollView>


        </LinearLayout>


    </RelativeLayout>


</androidx.drawerlayout.widget.DrawerLayout>